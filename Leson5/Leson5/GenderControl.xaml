<UserControl x:Class="Leson5.GenderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Leson5"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <RadioButton x:Name="MaleRadioButton" Content="Мужчина" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="83" Checked="MaleRadioButton_Checked"/>
        <RadioButton x:Name="FealeRadioButton" Content="Женщина" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Width="83" Checked="FealeRadioButton_Checked"/>

    </Grid>
</UserControl>
